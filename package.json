{
  "name": "linkgraph",
  "packageManager": "yarn@3.5.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "yarn workspace @linkgraph/frontend dev",
    "admin": "yarn workspace @linkgraph/admin",
    "frontend": "yarn workspace @linkgraph/frontend",
    "lint": "eslint ./packages --ext .ts,.tsx,.js,.jsx",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "typescript": "^5.0.4"
  }
}
